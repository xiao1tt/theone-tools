<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theone.tools.horde.dao.SessionDao">

    <resultMap id="BaseResultMap" type="com.theone.tools.horde.entity.SessionEntity">
        <!--@Table login_session-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="token" column="token" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="queryByUser" resultMap="BaseResultMap">
        select id,
               username,
               token,
               update_time,
               create_time
        from horde.session
        where username = #{username}
    </select>

    <select id="queryByToken" resultMap="BaseResultMap">
        select id,
               username,
               token,
               update_time,
               create_time
        from horde.session
        where token = #{token}
    </select>

    <insert id="insertOrUpdate" keyProperty="id" useGeneratedKeys="true">
        insert into horde.session(username, token)
        values (#{username}, #{token}) ON DUPLICATE KEY
        UPDATE token = #{token};
    </insert>

    <delete id="deleteByToken">
        delete
        from horde.session
        where token = #{token}
    </delete>

    <delete id="deleteByUser">
        delete
        from horde.session
        where username = #{username}
    </delete>
</mapper>