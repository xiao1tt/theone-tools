<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theone.tools.waterfall.dao.ProjectDao">

    <resultMap id="BaseResultMap" type="com.theone.tools.waterfall.entity.ProjectEntity">
        <!--@Table project-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="groupId" column="group_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="projectDesc" column="project_desc" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               group_id,
               name,
               project_desc,
               update_time,
               create_time
        from waterfall.project
        where id = #{id}
    </select>

    <select id="queryByIds" resultMap="BaseResultMap">
        select
        id, group_id, name, project_desc, update_time, create_time
        from waterfall.project
        where id in
        <foreach collection="ids" separator="," open="(" close=")" item="item">
            #{item}
        </foreach>
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select id,
               group_id,
               name,
               project_desc,
               update_time,
               create_time
        from waterfall.project
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        id, group_id, name, project_desc, update_time, create_time
        from waterfall.project
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="groupId != null">
                and group_id = #{groupId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="projectDesc != null and projectDesc != ''">
                and project_desc = #{projectDesc}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into waterfall.project(group_id, name, project_desc)
        values (#{groupId}, #{name}, #{projectDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update waterfall.project
        <set>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="projectDesc != null and projectDesc != ''">
                project_desc = #{projectDesc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from waterfall.project
        where id = #{id}
    </delete>

</mapper>