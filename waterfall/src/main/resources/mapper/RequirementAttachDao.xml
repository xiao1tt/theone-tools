<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theone.tools.waterfall.dao.RequirementAttachDao">

    <resultMap id="BaseResultMap" type="com.theone.tools.waterfall.entity.RequirementAttachEntity">
        <!--@Table requirement_attach-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="requirementId" column="requirement_id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="locate" column="locate" jdbcType="VARCHAR"/>
        <result property="attachType" column="attach_type" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, requirement_id, name, locate, attach_type, update_time, create_time
        from waterfall.requirement_attach
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, requirement_id, name, locate, attach_type, update_time, create_time
        from waterfall.requirement_attach
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, requirement_id, name, locate, attach_type, update_time, create_time
        from waterfall.requirement_attach
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="requirementId != null">
                and requirement_id = #{requirementId}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="locate != null and locate != ''">
                and locate = #{locate}
            </if>
            <if test="attachType != null and attachType != ''">
                and attach_type = #{attachType}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into waterfall.requirement_attach(requirement_id, name, locate, attach_type)
        values (#{requirementId}, #{name}, #{locate}, #{attachType})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update waterfall.requirement_attach
        <set>
            <if test="requirementId != null">
                requirement_id = #{requirementId},
            </if>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="locate != null and locate != ''">
                locate = #{locate},
            </if>
            <if test="attachType != null and attachType != ''">
                attach_type = #{attachType},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from waterfall.requirement_attach where id = #{id}
    </delete>

    <delete id="deleteByRequirement">
        delete from waterfall.requirement_attach where requirement_id = #{requirementId}
    </delete>

</mapper>