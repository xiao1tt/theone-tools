<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theone.tools.waterfall.dao.ProjectUserDao">

    <resultMap id="BaseResultMap" type="com.theone.tools.waterfall.entity.ProjectUserEntity">
        <!--@Table project_user-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="projectId" column="project_id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="role" column="role" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select id,
               project_id,
               username,
               user_role,
               update_time,
               create_time
        from waterfall.project_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select id,
               project_id,
               username,
               user_role,
               update_time,
               create_time
        from waterfall.project_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        id, project_id, username, user_role, update_time, create_time
        from waterfall.project_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="projectId != null">
                and project_id = #{projectId}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into waterfall.project_user(project_id, username, user_role)
        values
        <foreach collection="users" item="user" index= "index" separator =",">
            (
            #{projectId},
            #{user.username},
            #{user.userRole}
            )
        </foreach>
    </insert>

    <update id="update">
        update waterfall.project_user
        <set>
            <if test="userRole != null">
                user_role = #{userRole},
            </if>
        </set>
        where projectId = #{projectId} and username = #{username}
    </update>

    <!--通过主键删除-->
    <delete id="deleteByProject">
        delete
        from waterfall.project_user
        where project_id = #{projectId}
    </delete>

</mapper>