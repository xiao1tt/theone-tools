<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.theone.tools.waterfall.dao.RequirementTemplateDao">

    <resultMap id="BaseResultMap" type="com.theone.tools.waterfall.entity.RequirementTemplateEntity">
        <!--@Table requirement_template-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="templateDesc" column="template_desc" jdbcType="VARCHAR"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, name, template_desc, update_time, create_time
        from waterfall.requirement_template
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, name, template_desc, update_time, create_time
        from waterfall.requirement_template
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, name, template_desc, update_time, create_time
        from waterfall.requirement_template
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="templateDesc != null and templateDesc != ''">
                and template_desc = #{templateDesc}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into waterfall.requirement_template(name, template_desc)
        values (#{name}, #{templateDesc})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update waterfall.requirement_template
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="templateDesc != null and templateDesc != ''">
                template_desc = #{templateDesc},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from waterfall.requirement_template where id = #{id}
    </delete>

</mapper>